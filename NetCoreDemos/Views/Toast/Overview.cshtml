@model IEnumerable<DevExtreme.NETCore.Demos.Models.ListProduct>

<div id="product-list">
    <h1>Product List</h1>
    <ul class="products">
        @foreach(var product in Model) {
            <li>
                <img src="@product.ImageSrc" />
                <div>@product.Name</div>
                @(Html.DevExtreme().CheckBox()
                    .Text("Available")
                    .OnValueChanged("checkAvailable")
                )
            </li>
        }
    </ul>
    @(Html.DevExtreme().Toast()
        .ID("toast")
        .DisplayTime(600)
    )
</div>

<script>
    function checkAvailable(data) {
        var type = data.value ? "success" : "error",
            message = "@product.Name" + (data.value ? " is available" : " is not available");
        
        $("#toast").dxToast("instance").option({
            type,
            message,
            visible: true
        });
    }
</script>