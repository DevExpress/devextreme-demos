<div class="form">
    <div class="dx-fieldset">
        <div class="dx-field">
            <div class="dx-field-label">Checked</div>
            <div class="dx-field-value">
                @(Html.DevExtreme().CheckBox()
                    .Value(true)
                )
            </div>
        </div>
        <div class="dx-field">
            <div class="dx-field-label">Unchecked</div>
            <div class="dx-field-value">
                @(Html.DevExtreme().CheckBox()
                    .Value(false)
                )
            </div>
        </div>
        <div class="dx-field">
            <div class="dx-field-label">Indeterminate</div>
            <div class="dx-field-value">
                @(Html.DevExtreme().CheckBox()
                    .Value(null)
                )
            </div>
        </div>
        <div class="dx-field">
            <div class="dx-field-label">Handle value change</div>
            <div class="dx-field-value">
                @(Html.DevExtreme().CheckBox()
                    .Value(null)
                    .OnValueChanged("checkBox_valueChanged")
                )
            </div>
        </div>
        <div class="dx-field">
            <div class="dx-field-label">Disabled</div>
            <div class="dx-field-value">
                @(Html.DevExtreme().CheckBox()
                    .ID("disabled")
                    .Value(null)
                    .Disabled(true)
                )
            </div>
        </div>
        <div class="dx-field">
            <div class="dx-field-label">Custom size</div>
            <div class="dx-field-value">
                @(Html.DevExtreme().CheckBox()
                    .Value(null)
                    .IconSize(30)
                )
            </div>
        </div>
        <div class="dx-field">
            <div class="dx-field-label">With blue label</div>
            <div class="dx-field-value">
                @(Html.DevExtreme().CheckBox()
                    .Value(true)
                    .Text("Label")
                )
            </div>
        </div>
    </div>
</div>

<script>
    function checkBox_valueChanged(data) {
        $("#disabled").dxCheckBox("instance").option("value", data.value);
    }
</script>
