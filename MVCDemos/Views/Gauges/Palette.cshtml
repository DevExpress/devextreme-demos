@(Html.DevExtreme().BarGauge()
    .ID("gauge")
    .StartValue(-5)
    .EndValue(5)
    .BaseValue(0)
    .Values(new[] { -2.13, 1.48, -3.09, 4.52, 4.9, 3.9 })
    .Label(l => l.Format("##.## mm;-##.## mm"))
    .Export(e => e.Enabled(true))
    .Palette(VizPalette.Ocean)
    .Title(t => t
        .Text("Deviations in the Manufactured Parts")
        .Font(f => f.Size(28))
    )
)
