@model DevExtreme.MVC.Demos.Models.SampleData.OrgData

@(Html.DevExtreme().Diagram()
    .ID("diagram")
    .Nodes(ns => ns
        .DataSource(d => d
            .Array()
            .Key("this")
            .Data(Model.Items)
        )
        .KeyExpr("ID")
        .TextExpr("Text")
        .TypeExpr("Type")
        .AutoLayout(al => al
            .Type(DiagramDataLayoutType.Tree)
        )
    )
    .Edges(ns => ns
        .DataSource(d => d
            .Array()
            .Key("this")
            .Data(Model.Links)
        )
        .KeyExpr("ID")
        .FromExpr("From")
        .ToExpr("To")
    )
    .Toolbox(t => t
        .Groups(g => g
            .Add().Category(DiagramShapeCategory.General).Title("General")
        )
    )
)
