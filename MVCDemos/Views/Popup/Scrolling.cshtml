<script>
    function showPopup() {
        $("#popup").dxPopup("show");
    }

    function showPopupWithScrollView() {
        $("#popup-with-scrollview").dxPopup("show");
    }

    function hidePopup() {
        $("#popup").dxPopup("hide");
    }

    function hidePopupWithScrollView() {
        $("#popup-with-scrollview").dxPopup("hide");
    }
</script>
