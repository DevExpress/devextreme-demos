@section ExternalDependencies {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.3.1/jspdf.umd.min.js"></script>
    <script>
        window.jsPDF = window.jspdf.jsPDF;
    </script>
}

@(Html.DevExtreme().DataGrid<DevExtreme.MVC.Demos.Models.Customer>()
    .ID("gridContainer")
    .Columns(columns => {
        columns.AddFor(m => m.CompanyName);

        columns.AddFor(m => m.Phone);

        columns.AddFor(m => m.Fax);

        columns.AddFor(m => m.City);

        columns.AddFor(m => m.State)
            .GroupIndex(0);
    })
    .AllowColumnReordering(true)
    .ShowBorders(true)
    .Grouping(grouping => grouping.AutoExpandAll(true))
    .SearchPanel(searchPanel => searchPanel.Visible(true))
    .GroupPanel(groupPanel => groupPanel.Visible(true))
    .Paging(paging => paging.PageSize(10))
    .DataSource(d => d.WebApi()
        .Controller("DataGridCustomers")
        .Key("ID")
    )
    .Toolbar(toolbar => {
        toolbar.Items(items => {
            items.Add().Name("groupPanel");
            items.Add()
                .Location(ToolbarItemLocation.After)
                .Widget(w =>
                    w.Button()
                        .Icon("exportpdf")
                        .Text("Export to PDF")
                        .OnClick("exportToPDF")
                );
            items.Add().Name("searchPanel");
        });
    })
)

<script>
    function exportToPDF() {
        var doc = new jsPDF();
        var dataGrid = $("#gridContainer").dxDataGrid("instance");
        DevExpress.pdfExporter.exportDataGrid({
            jsPDFDocument: doc,
            component: dataGrid,
            indent: 5,
        }).then(function () {
            doc.save("Companies.pdf");
        });
    }
</script>
