{
  "compilerOptions": {
    "target": "ES2015",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "ts-node": {
    "compilerOptions": {
      "target": "ES2015",
      "moduleResolution": "node",
      "jsx": "react",
    }
  },
  "include": [
    "JSDemos/Demos/**/*.ts",
    "JSDemos/Demos/**/*.tsx"
  ]
}
